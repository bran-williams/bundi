<UI>
    <Container tag="controls" x="5" y="5" width="0" height="0" opacity="0">
        <ListLayout padding="2" componentPadding="4"/>

        <Label tag="move_sun_controls" text="Hold {{ move_sun_controls }} to move the sun." color="#ffffff" height="30" alignment="left" style="shadow">
            <FontData font="Roboto" size="24" style="bold"/>
        </Label>
        <Label tag="wireframe_controls" text="Press {{ wireframe_controls }} to toggle wireframe mode." color="#ffffff" height="30" alignment="left" style="shadow">
            <FontData font="Roboto" size="24" style="bold"/>
        </Label>
        <Label tag="reload_env_controls" text="Press {{ reload_env_controls }} to reload the env file." color="#ffffff" height="30" alignment="left" style="shadow">
            <FontData font="Roboto" size="24" style="bold"/>
        </Label>
        <Label tag="rotate_cube_controls" text="Press {{ rotate_cube_controls }} to rotate the cube." color="#ffffff" height="30" alignment="left" style="shadow">
            <FontData font="Roboto" size="24" style="bold"/>
        </Label>
    </Container>
</UI>