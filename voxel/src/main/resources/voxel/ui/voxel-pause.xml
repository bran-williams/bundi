<UI>
    <Import res="voxel/ui/voxel-background.xml"/>

    <Container opacity="0" width="100%" height="100%">
        <Image tag="snoopy" url="https://upload.wikimedia.org/wikipedia/en/5/53/Snoopy_Peanuts.png" x="40%" y="30%" width="294" height="340"/>
    </Container>

    <Container tag="mainmenu" autolayout="true" x="0" y="30%" width="40%" height="70%" opacity="0">
        <GridLayout rows="6" columns="1" horizontalpadding="2%" verticalpadding="4%" componentpadding="4"/>
        <!--        <ListLayout padding="2" componentPadding="4"/>-->

        <Label tag="menu_title" text="Paused" color="#ffffff" height="70">
            <FontData font="Roboto" size="50" style="bold"/>
        </Label>

        <Button tag="resume_button" width="300" height="48" highlight="true" color="#aaaaaa">
            <Label text="Resume" color="#444444" height="36" alignment="left">
                <FontData font="Roboto" size="36" style="plain"/>
            </Label>
        </Button>

        <Button tag="options_button" width="300" height="48" highlight="true" color="#aaaaaa">
            <Label text="Options" color="#444444" height="36" alignment="left">
                <FontData font="Roboto" size="36" style="plain"/>
            </Label>
        </Button>

        <Button tag="quit_button" width="300" height="48" highlight="true" color="#f44336">
            <Label text="Quit to Main Menu" color="#ffffff" height="36" alignment="left">
                <FontData font="Roboto" size="36" style="plain"/>
            </Label>
        </Button>
    </Container>
</UI>